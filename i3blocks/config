[click]
full_text=ðŸ”Š
command=foot alsamixer
color=#F79494

# Guess the weather quarter-hourly
[weather]
command=source /etc/profile && custWeather | xargs echo
interval=60
color=#A4C2F4

# Query my default IP address only on startup
[ip]
command=ip addr | grep wlp | grep inet | awk '{ print $2} '
interval=once
color=#91E78B

# CPU temp average
[cputemp]
command=cpu_avg_temp 
# | sed 's/^/ï‹›/'
interval=5
color=#FFFF00

# Battery percent
[battery]
command=acpi | cut -d ' ' -f 3- -- | awk '{NF -= 1; print $0}' | sed 's/.$//' | sed 's/^/ðŸ”‹/'
interval=60
color=#7F7F7F

# Update time every 5 seconds
[time]
command=date +%R
interval=60
