# Guess the weather quarter-hourly
[weather]
# command=curl -Ss 'https://wttr.in/split?0&T&Q' | cut -c 16- | head -2 | xargs echo
command=custWeather | xargs echo
interval=60
color=#A4C2F4

# Query my default IP address only on startup
[ip]
command=ip addr | grep wlp | grep inet | awk '{ print $2} '
interval=once
color=#91E78B

# CPU temp average
[cputemp]
command=cpu_avg_temp 
# | sed 's/^/ï‹›/'
interval=5
color=#FFFF00

# Battery percent
[battery]
command=acpi | awk '{ print  $4}' | sed 's/,*//g' | sed 's/^/ðŸ”‹/'
interval=60
color=#7F7F7F

# Update time every 5 seconds
[time]
command=date +%R
interval=60
