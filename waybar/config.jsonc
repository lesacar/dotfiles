// -*- mode: jsonc -*-
{
    // "layer": "top", // Waybar at top layer
    // "position": "bottom", // Waybar position (top|bottom|left|right)
    "height": 24, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "spacing": 5, // Gaps between modules (4px)
    // Choose the order of the modules
    "modules-left": [
        "sway/workspaces",
        "sway/mode",
        "sway/scratchpad",
    ],
    "modules-center": [
        "sway/window"
    ],
    "modules-right": [
        "custom/gpu_info",
        "pulseaudio",
        "custom/cpu_info",
        "custom/memory",
        "network",
        "battery",
        "clock",
        "tray",
    ],

    "custom/cpu_info":
    {
        "format": "{}",
        "tooltip": false,
        "interval": 2,
        "exec": "cpu_stuff",
        "format-icons": ["Ôù´", "Ôãâ", "Ôù©"]
    },

    "custom/gpu_info":
    {
        "format": "{}",
        "tooltip": false,
        "interval": 2,
        "exec": "NOUVEAU_TEMP",
        "format-icons": ["Ôù´", "Ôãâ", "Ôù©"]
    },

    "custom/memory":
    {
        "format": "{}",
        "return-type": "json",
        "tooltip": true,
        "interval": 2,
        "exec": "waybar_real_memory_used_module",
        "format-icons": ["Ôù´", "Ôãâ", "Ôù©"]
    },

