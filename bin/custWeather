#! /bin/bash
set -x
loc=$LOC
temp=$(curl -s -L -A "Mozilla/5.0 (X11; Linux x86_64; rv:60.0) Gecko/20100101 Firefox/81.0" https://www.accuweather.com/en/us/$loc | grep -A 2 "class=\"display-temp\"" | head -1 | tail -1 | tr -d '[:blank:]' | cut -c 26-27)
temp+="Â°C"

state=$(curl -s -L -A "Mozilla/5.0 (X11; Linux x86_64; rv:60.0) Gecko/20100101 Firefox/81.0" https://www.accuweather.com/en/us/$loc | grep "<div class=\"phrase\">" | head -1 | sed --expression='s/^[ \t]*//' | cut -c 21-50 | cut -d '<' -f 1)
# sed 's/^[ \t]*//'
echo $state $temp
